<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp">

        <ImageButton
            android:id="@+id/bt_img_branch"
            android:layout_width="57dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            app:layout_constraintEnd_toEndOf="@+id/tv_address"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_branch_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南京忠孝東路店"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="電話:"
            app:layout_constraintEnd_toEndOf="@+id/tv_branch_title"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_branch_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_branch_title" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="地址:"
            app:layout_constraintBottom_toBottomOf="@+id/tv_phonenumber"
            app:layout_constraintStart_toEndOf="@+id/tv_phonenumber"
            app:layout_constraintTop_toTopOf="@+id/tv_phonenumber" />

        <TextView
            android:id="@+id/tv_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02-12345678"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="台北市吳興街10林100巷自強路261號6樓"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvCmlCoCa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opentime"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_branch_tine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:00~24:00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvCmlCoCa" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>