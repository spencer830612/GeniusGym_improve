<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coachMotionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackgroundBorderless"
    app:layoutDescription="@xml/bottomitem_coach_calendar_scene">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/ivCmlCoCa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tvCmlCoCa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_calendar"
        app:altSrc="@drawable/baseline_calendar_month_24"/>

    <TextView
        android:id="@+id/tvCmlCoCa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="行事曆"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCmlCoCa" />
</androidx.constraintlayout.motion.widget.MotionLayout>